R<input type=number id=kolor value=0 min=0 max=255><br><br>
G<input type=number id=kolor1 value=0 min=0 max=255><br><br>
B<input type=number id=kolor2 value=0 min=0 max=255><br><br>

<div id=myDiv style=width:100px;height:100px;border:1px solid black;></div><br>
<button type=button onclick=myFunction()>Dodaj Kolor</button>

<script>


function myFunction() {


 var r = document.getElementById("kolor").value;
 var g = document.getElementById("kolor1").value;
 var b = document.getElementById("kolor2").value;
   
 document.getElementById("myDiv").style.backgroundColor = "rgb("+r+","+g+","+b+")";

	
  }
   
</script>

